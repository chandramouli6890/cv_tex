% DEFINING SOME VARIABLES -----------------------------------------------------
\newcommand{\ulinespace}{10pt}
\newcommand{\ulinewidth}{1.0pt}

% CUSTOM SECTION --------------------------------------------------------
% purely using \newcommands
\newcommand{\lcoluline}{
	{\color{templateColor1}\rule[\ulinespace]{0.14\textwidth}{\ulinewidth}}\noindent
  {\color{templateColor2}\rule[\ulinespace]{0.149\textwidth}{\ulinewidth}}
}

\newcommand{\rcoluline}{
	{\color{templateColor2}\rule[\ulinespace]{0.42\textwidth}{\ulinewidth}}\noindent
  {\color{templateColor1}\rule[\ulinespace]{0.24\textwidth}{\ulinewidth}}
}

